<UserControl x:Class="BudgetTracker.Wpf.Net8.Views.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BudgetTracker.Wpf.Net8.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Right-align TextBlock content (used for currency column) -->
        <Style x:Key="RightAlignTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:TransactionsViewModel />
    </UserControl.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header + Buttons + Search -->
        <Border Padding="10"
                CornerRadius="8"
                BorderBrush="#DDD"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Transactions"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>

                <!-- Search -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBox Width="320"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,0,8,0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Search Description or Category" />
                    <Button Content="Clear"
                            Width="80"
                            Height="28"
                            Command="{Binding ClearSearchCommand}" />
                </StackPanel>

                <!-- Toolbar -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Refresh"
                            Width="90"
                            Margin="0,0,8,0"
                            Command="{Binding RefreshCommand}" />

                    <Button Content="Add"
                            Width="90"
                            Margin="0,0,8,0"
                            Command="{Binding AddTransactionCommand}" />

                    <Button Content="Edit"
                            Width="90"
                            Margin="0,0,8,0"
                            Command="{Binding EditSelectedCommand}" />

                    <Button Content="Delete"
                            Width="90"
                            Command="{Binding DeleteSelectedCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1"
                  Margin="0,10,0,0"
                  ItemsSource="{Binding Transactions}"
                  SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  MouseDoubleClick="TransactionsGrid_MouseDoubleClick">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="60"
                                    Binding="{Binding Id}" />

                <DataGridTextColumn Header="Date" Width="120"
                                    Binding="{Binding Date, StringFormat=yyyy-MM-dd}" />

                <DataGridTextColumn Header="Type" Width="100"
                                    Binding="{Binding Type}" />

                <DataGridTextColumn Header="Category" Width="160"
                                    Binding="{Binding Category}" />

                <DataGridTextColumn Header="Description" Width="*"
                                    Binding="{Binding Description}" />

                <DataGridTextColumn Header="Amount" Width="120"
                                    Binding="{Binding Amount, StringFormat=C}"
                                    ElementStyle="{StaticResource RightAlignTextBlockStyle}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
